---
import { clsx } from "clsx";
import { twMerge } from "tailwind-merge";

type Props = {
	className?: string;
};

const { className } = Astro.props;
---
<div
        class={twMerge(
            clsx(
                "inline-block h-[1lh] w-full animate-pulse rounded-lg bg-neutral-800 transition-colors",
                className,
            ),
        )}
/>