---
import PlayfulDivider from "@/components/common/PlayfulDivider.astro";

interface Props {
	description: string;
	responsibilities: string[];
}

const { description, responsibilities } = Astro.props;
---

<section class="max-w-prose-l mx-auto grid gap-16">
    <div class="grid gap-8">
        <h2 class="text-4xl">
            My responsibilities
        </h2>

        <p class="text-neutral-400 light:text-neutral-700 max-w-prose">{description}</p>
    </div>

    <PlayfulDivider />

    <div class="grid gap-8">
        <ul class="grid gap-4">
            {responsibilities.map((responsibility) =>
                    <li class="p-8 bg-neutral-900 light:bg-neutral-100 rounded-3xl">{responsibility}</li>
            )}
        </ul>
    </div>
</section>